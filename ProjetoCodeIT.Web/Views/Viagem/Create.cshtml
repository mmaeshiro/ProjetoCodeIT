@model ProjetoCodeIT.Web.ViewModels.ItemViagemViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Viagem</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Cadastro</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.idItemViagem)

    <div class="form-group">
        @Html.Label("Produto", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.idProduto, new SelectList(Model.listaProdutoViewModel, "idProduto", "nome"), "Selecione", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idProduto, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.Label("Frete", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.idFrete, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(model => model.idFrete, new SelectList(Model.listaFreteViewModel, "idFrete", "valor"), "Selecione", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idFrete, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
